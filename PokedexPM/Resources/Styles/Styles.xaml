<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui">
        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource OnSurface}" />
        </Style>
        <Style TargetType="Frame" x:Key="CardFrame">
            <Setter Property="HasShadow" Value="True" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="BackgroundColor" Value="{StaticResource Card}" />
        </Style>
    </ResourceDictionary>

</ResourceDictionary>
