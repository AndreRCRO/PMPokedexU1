<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokedexPM.Pages.HomePage"
             Title="HomePage">
    
    <VerticalStackLayout Spacing="12">
        <Label Text="¡Atrápalos ya!" FontSize="28" FontAttributes="Bold" />
        <SearchBar Placeholder="Busca por nombre" 
                   TextChanged="SearchBar_TextChanged"/>
        <CollectionView
            ItemsSource="{Binding FilteredPokemons}"
            SelectionMode="Single"
            SelectionChanged="CollectionView_SelectionChanged"
            ItemsLayout="VerticalGrid,2">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="5" Margin="5" BorderColor="Gray" CornerRadius="10">
                        <VerticalStackLayout>
                            <Image Source="{Binding Sprites.FrontDefault}" HeightRequest="80" />
                            <Label Text="{Binding Name}" HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
    
</ContentPage>