<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokedexPM.Controls.PokemonCard">
    
    <Frame Style="{StaticResource CardFrame}">
        <Grid ColumnDefinitions="Auto,*">
            <Image Source="{Binding ImageUrl}" WidthRequest="72" HeightRequest="72" Aspect="AspectFit" />
            <VerticalStackLayout>
                <Label Text="{Binding DisplayName}" FontAttributes="Bold" />
                <HorizontalStackLayout Spacing="4">
                    <Label Text="{Binding Types[0]}" FontSize="12" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </Frame>
    
</ContentView>
